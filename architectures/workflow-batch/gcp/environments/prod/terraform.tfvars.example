# =============================================
# Production Environment Configuration
# =============================================
# Copy this file to terraform.tfvars and update values
# =============================================

# Required
project_id = "your-gcp-project-id"

# Optional - Override defaults
# region             = "asia-northeast1"
# service_name       = "workflow-batch"

# Cloud Scheduler Configuration
# scheduler_schedule  = "0 9 * * *"        # Daily at 9:00 AM JST
# scheduler_time_zone = "Asia/Tokyo"

# Cloud Run Job Configuration
# job_task_count  = 1
# job_max_retries = 3
# job_timeout     = "3600s"  # 1 hour
# job_cpu         = "2000m"
# job_memory      = "1Gi"
job_image = "gcr.io/your-project/your-batch-job:latest"  # Replace with your image

# Environment Variables for the job
# job_env_vars = {
#   LOG_LEVEL = "info"
#   BATCH_SIZE = "1000"
# }

# Monitoring Configuration (Required for production)
# enable_monitoring     = true
alert_email = "your-team@example.com"  # Replace with your email
# job_failure_threshold = 1

# Labels
# labels = {
#   environment = "production"
#   team = "data-engineering"
#   cost_center = "analytics"
# }
