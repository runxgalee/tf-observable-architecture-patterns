# Sensitive Configuration (DO NOT commit actual secrets.auto.tfvars to Git)
# Copy this file to secrets.auto.tfvars and fill in your actual values

# Project Configuration
project_id = "your-gcp-project-id"

# Cloud Run Configuration
container_image = "gcr.io/cloudrun/hello"  # Replace with your image

# Additional environment variables (optional)
additional_env_vars = {
  # "DATABASE_URL" = "postgresql://..."
  # "API_KEY"      = "your-api-key"
}

# Notification channels (create these in Cloud Monitoring first)
notification_channels = []
# notification_channels = [
#   "projects/your-project/notificationChannels/1234567890",
# ]

# ========================================
# Secret Manager Configuration for GitHub Actions
# ========================================
# These secrets will be stored in GCP Secret Manager and used by GitHub Actions
# to authenticate and manage Terraform state

# Enable Secret Manager to store GitHub Actions secrets
enable_secret_manager = false  # Set to true to enable

# Workload Identity Provider for GitHub Actions
# Get this value from: terraform output -state=bootstrap/gcp/github-actions-auth/terraform.tfstate workload_identity_provider
# Or run: cd bootstrap/gcp/github-actions-auth && terraform output workload_identity_provider
github_wif_provider = ""
# github_wif_provider = "projects/123456789/locations/global/workloadIdentityPools/github-actions/providers/github"

# Service Account Email for GitHub Actions
# Get this value from: terraform output -state=bootstrap/gcp/github-actions-auth/terraform.tfstate service_account_email
# Or run: cd bootstrap/gcp/github-actions-auth && terraform output service_account_email
github_wif_service_account = ""
# github_wif_service_account = "github-actions-terraform@your-project.iam.gserviceaccount.com"

# Terraform State Bucket Name
# Get this value from: terraform output -state=bootstrap/gcp/terraform-state/terraform.tfstate bucket_name
# Or run: cd bootstrap/gcp/terraform-state && terraform output bucket_name
terraform_state_bucket = ""
# terraform_state_bucket = "your-project-terraform-state"
